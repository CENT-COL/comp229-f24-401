{
  "name": "comp299-f24-401",
  "version": "1.0.0",
  "description": "MERN Fullstack application",
  "main": "index.js",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:client start:server",
    "start:client": "npm --prefix client run dev",
    "start:server": "npm --prefix server run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm install --legacy-peer-deps && npx vite build",
    "build:server": "echo 'No build step for the server'"
  },
  "author": "Thiago Castilho",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "vite": "^6.0.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "antd": "^5.22.2",
    "bootstrap": "^5.3.3",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "websocket": "^1.0.35"
  }
}
